<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_rectangle_background"
    android:paddingHorizontal="18dp"
    android:paddingVertical="15dp">
    <TextView
        android:id="@+id/tvResumeHelpOpenTitle"
        style="@style/tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이력서 공개"
        android:textColor="@color/gray6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvResumeHelpOpenContent"
        style="@style/caption1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="이력서를 공개하시면 추후 이력서 열\n람서비스를 통한 면접 제안을 받으실\n수 있습니다."
        android:textColor="@color/gray5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvResumeHelpOpenTitle" />

    <TextView
        android:id="@+id/tvResumeHelpPrivateTitle"
        style="@style/tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.5dp"
        android:text="이력서 비공개"
        android:textColor="@color/gray6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvResumeHelpOpenContent" />

    <TextView
        style="@style/caption1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="모든 정보가 비공개 됩니다.\n입사지원한 기업에서만 이력서를\n확인할 수 있습니다."
        android:textColor="@color/gray5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvResumeHelpPrivateTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>