<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_white_fill_12_rect"
    android:paddingHorizontal="18dp"
    android:paddingVertical="15dp">

    <TextView
        android:id="@+id/tvResumeHelpOpenTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvResumeHelpOpenTitle"
        android:textAppearance="@style/tag"
        android:textColor="@color/gray6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvResumeHelpOpenContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/tvResumeHelpOpenContent"
        android:textAppearance="@style/caption1"
        android:textColor="@color/gray5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvResumeHelpOpenTitle" />

    <TextView
        android:id="@+id/tvResumeHelpPrivateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.5dp"
        android:text="@string/tvResumeHelpPrivateTitle"
        android:textAppearance="@style/tag"
        android:textColor="@color/gray6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvResumeHelpOpenContent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/tvResumeHelpPrivateContent"
        android:textAppearance="@style/caption1"
        android:textColor="@color/gray5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvResumeHelpPrivateTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>