<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/white_rectangle_background"
    android:paddingHorizontal="18dp"
    android:paddingVertical="15dp">

    <TextView
        android:id="@+id/tvAttachmentHelpTitle"
        style="@style/tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="첨부파일 등록"
        android:textColor="@color/gray6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAttachmentHelpContent"
        style="@style/caption1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="경험을 보여줄 수 있는 포트폴리오나\n경력기술서 등을 첨부해보세요.\n(PDF를 권장합니다.)"
        android:textColor="@color/gray5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAttachmentHelpTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>